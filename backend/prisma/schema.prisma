generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id                  Int       @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String    @unique
  password            String
  phoneNumber         String?
  profilePicture      String?
  dateOfBirth         DateTime?
  gender              String?
  address             String?
  company             String?              // ðŸ‘ˆ add this
  subscribeNewsletter Boolean   @default(false) // ðŸ‘ˆ add this
  createdAt           DateTime  @default(now())
  events              Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text       
  startDate   DateTime
  endDate     DateTime
  type        String   @default("task")  
  color       String   @default("#3B82F6")  
  allDay      Boolean  @default(false)  
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}