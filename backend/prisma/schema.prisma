generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text       // ✅ Optional, can be long text
  startDate   DateTime
  endDate     DateTime
  type        String   @default("task")  // ✅ Default value
  color       String   @default("#3B82F6")  // ✅ Default blue color
  allDay      Boolean  @default(false)  // ✅ Already has default
  createdAt   DateTime @default(now())
}